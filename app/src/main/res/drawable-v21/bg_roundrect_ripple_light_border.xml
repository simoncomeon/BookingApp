<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/cardview_light_background">
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="0.8dp"
                android:color="#1F7A0F" />
            <corners android:radius="15dp" />
        </shape>
    </item>

    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <corners android:radius="23dp" />
            <solid android:color="@color/teal_200" />
        </shape>
    </item>
</ripple>